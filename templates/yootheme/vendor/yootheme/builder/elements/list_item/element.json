{
    "name": "list_item",
    "title": "Item",
    "width": 500,
    "placeholder": {
        "props": {
            "content": "Lorem ipsum dolor sit amet.",
            "image": "",
            "icon": ""
        }
    },
    "templates": {
        "render": "./templates/template.php",
        "content": "./templates/content.php"
    },
    "fields": {
        "content": {
            "label": "Content",
            "type": "editor"
        },
        "image": "${builder.image}",
        "image_alt": {
            "label": "Image Alt",
            "enable": "image"
        },
        "icon": {
            "label": "Icon",
            "description": "Instead of using a custom image, you can click on the pencil to pick an icon from the icon library.",
            "type": "icon",
            "enable": "!image"
        },
        "icon_color": {
            "label": "Icon Color",
            "description": "Set the icon color.",
            "type": "select",
            "default": "",
            "options": {
                "None": "",
                "Muted": "muted",
                "Emphasis": "emphasis",
                "Primary": "primary",
                "Success": "success",
                "Warning": "warning",
                "Danger": "danger"
            },
            "enable": "!image"
        },
        "link": "${builder.link}",
        "link_target": "${builder.link_target}"
    },
    "fieldset": {
        "default": {
            "fields": [
                "content",
                "image",
                "image_alt",
                "icon",
                "icon_color",
                "link",
                "link_target"
            ]
        }
    }
}
