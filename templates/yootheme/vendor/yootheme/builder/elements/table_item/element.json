{
    "name": "table_item",
    "title": "Item",
    "width": 500,
    "placeholder": {
        "props": {
            "title": "Title",
            "meta": "",
            "content": "Lorem ipsum dolor sit amet.",
            "image": ""
        }
    },
    "templates": {
        "render": "./templates/template.php",
        "content": "./templates/content.php"
    },
    "fields": {
        "title": {
            "label": "Title"
        },
        "meta": {
            "label": "Meta"
        },
        "content": {
            "label": "Content",
            "type": "editor"
        },
        "image": "${builder.image}",
        "image_alt": {
            "label": "Image Alt",
            "enable": "image"
        },
        "link": "${builder.link}",
        "link_text": {
            "label": "Link Text",
            "description": "Set a different link text for this item.",
            "enable": "link"
        }
    },
    "fieldset": {
        "default": {
            "fields": [
                "title",
                "meta",
                "content",
                "image",
                "image_alt",
                "link",
                "link_text"
            ]
        }
    }
}
