{
    "@import": "./element.php",
    "name": "gallery_item",
    "title": "Item",
    "width": 500,
    "placeholder": {
        "props": {
            "title": "Title",
            "meta": "",
            "content": "",
            "image": "",
            "hover_image": ""
        }
    },
    "templates": {
        "render": "./templates/template.php",
        "content": "./templates/content.php"
    },
    "fields": {
        "image": "${builder.image}",
        "image_alt": {
            "label": "Image Alt",
            "enable": "image"
        },
        "title": {
            "label": "Title"
        },
        "meta": {
            "label": "Meta"
        },
        "content": {
            "label": "Content",
            "type": "editor"
        },
        "link": "${builder.link}",
        "hover_image": {
            "label": "Hover Image",
            "description": "Select an optional image that appears on hover.",
            "type": "image"
        },
        "text_color": {
            "label": "Text Color",
            "description": "Set light or dark color mode for text, buttons and controls.",
            "type": "select",
            "default": "",
            "options": {
                "None": "",
                "Light": "light",
                "Dark": "dark"
            }
        },
        "text_color_hover": {
            "type": "checkbox",
            "text": "Inverse the text color on hover"
        },
        "tags": {
            "label": "Tags",
            "description": "Enter a comma-separated list of tags, for example, <code>blue, white, black</code>."
        }
    },
    "fieldset": {
        "default": {
            "fields": [
                "image",
                "image_alt",
                "title",
                "meta",
                "content",
                "link",
                "hover_image",
                "text_color",
                "text_color_hover",
                "tags"
            ]
        }
    }
}
